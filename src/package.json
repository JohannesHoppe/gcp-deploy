{
  "name": "ngx-deploy-npm",
  "version": "2.0.0",
  "description": "Publish your libraries to NPM with just one command",
  "main": "index.js",
  "scripts": {
    "prebuild": "rimraf dist && json2ts deploy/schema.json > deploy/schema.d.ts",
    "build": "tsc -p tsconfig.build.json",
    "postbuild": "copyfiles LICENSE builders.json collection.json ng-add-schema.json package.json ngx-deploy-npm deploy/schema.json dist && copyfiles --flat ../README.md dist",
    "predeploy": "yarn build",
    "postinstall": "cd .. && husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable",
    "deploy": "cd dist && npm publish --access public && cd ..",
    "link": "yarn run build && cd dist && yarn link && cd ..",
    "unlink": "cd dist && yarn unlink && cd ..",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk=0.0.0.0 node_modules/.bin/jest --runInBand",
    "release": "standard-version --infile ../CHANGELOG.md",
    "create-workspace:angular": "../tools/create-workspace-angular.sh",
    "create-workspace:nx": "../tools/create-workspace-nx.sh"
  },
  "schematics": "./collection.json",
  "builders": "./builders.json",
  "ng-add": {
    "save": "devDependencies"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bikecoders/ngx-deploy-npm.git"
  },
  "keywords": [
    "npm",
    "angular",
    "npm-package",
    "nx",
    "npm-publish",
    "ng-deploy",
    "cli",
    "angular-cli",
    "deploy"
  ],
  "author": {
    "name": "Diego Juliao",
    "email": "dianjuar@gmail.com"
  },
  "contributors": [
    "Yossely Mendoza <yossely7@gmail.com>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bikecoders/ngx-deploy-npm/issues"
  },
  "homepage": "https://github.com/bikecoders/ngx-deploy-npm/#readme",
  "devDependencies": {
    "@angular-devkit/architect": ">= 0.900 < 0.1200",
    "@angular-devkit/core": "^9.0.0 || ^10.0.0 || ^11.0.0",
    "@angular-devkit/schematics": "^9.0.0 || ^10.0.0 || ^11.0.0",
    "@types/jest": "^24.9.1",
    "@types/node": "^12.6.9",
    "copyfiles": "^2.4.1",
    "husky": "^5.1.1",
    "jest": "^24.9.0",
    "json-schema-to-typescript": "^7.0.0",
    "pinst": "^2.1.6",
    "prettier": "2.2.1",
    "pretty-quick": "^3.1.0",
    "rimraf": "^2.6.3",
    "standard-version": "^9.1.1",
    "ts-jest": "^24.3.0",
    "typescript": "^3.9.9"
  },
  "peerDependencies": {
    "@angular-devkit/architect": ">= 0.900 < 0.1200",
    "@angular-devkit/core": "^9.0.0 || ^10.0.0 || ^11.0.0",
    "@angular-devkit/schematics": "^9.0.0 || ^10.0.0 || ^11.0.0"
  },
  "dependencies": {},
  "jest": {
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
